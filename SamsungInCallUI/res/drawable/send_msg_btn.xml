<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/rtt_bubble_radius" />
                    <stroke android:width="@dimen/rtt_send_bubble_stroke" android:color="#66fafafa" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/rtt_bubble_radius" />
                    <stroke android:width="@dimen/rtt_send_bubble_stroke" android:color="#fffafafa" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
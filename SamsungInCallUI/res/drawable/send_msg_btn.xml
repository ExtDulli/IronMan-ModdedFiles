<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/rtt_send_msg_button_color" android:alpha="60.0" />
                    <corners android:radius="@dimen/rtt_bubble_radius" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/rtt_send_msg_button_color" />
                    <corners android:radius="@dimen/rtt_bubble_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>